{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"]
    }
  },
  "include": [
    "app/src/**/*.ts",
    "app/src/**/*.d.ts",
    "app/src/**/*.tsx",
    "app/src/**/*.vue",
    "scripts/**/*.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
